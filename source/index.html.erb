        <h2 class="alt-text">Recent Videos</h2>

        <div class="row">

          <% data.widgets.recent_videos.each do | v | %>
          <div class="large-4 columns end">
            <div class="flex-video widescreen">
              <a href="http://www.youtube.com/watch?v=<%= v["movie"] %>"><img src="http://img.youtube.com/vi/<%= v["movie"] %>/mqdefault.jpg" alt=""></a>
            </div>
            <p><a href="http://www.youtube.com/watch?v=<%= v["movie"] %>"><%= v["title"] %></a></p>
          </div>

          <% end %>
        </div>

        <script src="https://apis.google.com/js/platform.js" defer></script>
        <div class="g-ytsubscribe" data-channel="JamesManOfStone" data-layout="default" data-theme="dark" data-count="default"></div>


      </div>
    </div>
  </div>

