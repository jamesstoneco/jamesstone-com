<section class="testimonials">



  <div class="column-row">
    <h2 class="text-center"><%= data.widgets.testimonials_headline %></h2>
  </div>

<div class="row">
  <div class="column small-12">
    <slick infinate="true" touch-move="true" dots="false" speed="700" slides-to-show="2" touch-move="false" slides-to-scroll="1" adaptive-height="false">
    
      <% data.widgets.testimonials.each do | t | %>
        <div class="card active">
          <div class="image-wrapper">
            <img src="<%= t.image_url %>" alt="">
          </div>
          <p>
            <span class="star"></span><span class="star"></span><span class="star"></span><span class="star"></span><span class="star"></span>
          </p>
          <p><%= t.text %></p>
          <p><%= t.name %>, <%= t.title %> <br>
          <a target="_blank" href="<%= t.company_url %>"><span class="company"><%= t.company %></span></a></p>
        </div>
      <% end %>
    </slick>
  </div>
</div>
</section>