<section class="case-studies">



  <div class="column-row">
    <h2 class="text-center"><%= data.widgets.case_studies_headline %></h2>
  </div>

  <div class="row">
    <div class="column small-12">
      <slick infinate="true" touch-move="true" dots="true" speed="700" slides-to-show="1" touch-move="false" slides-to-scroll="1" adaptive-height="false">

        <% data.widgets.case_studies.each do | t | %>
        <div class="card active">
          <img src="<%= t.image_url %>" alt="">
          <p><%= t.text %></p>
          
          <p class="text-center"><a target="_blank" href="<%= t.company_url %>" class="button hollow">View Website</a></p>

          </div>
          <% end %>
        </slick>
      </div>
    </div>
  </section>

