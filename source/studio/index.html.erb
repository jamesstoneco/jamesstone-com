<div class="row">
  <div class="large-10 large-centered columns">
    <div class="row">

      <% count = 0 %>
      <% page_articles.each_with_index do |article, i| %>
      <% if article.tags.any? { |s| s.include?('studio') } %>
      <% count = count + 1 %>
      <% if count <= 3 then %>
      <div class="medium-4 large-4 columns">
        <h3><%= link_to article.title, article %> <small><%= article.date.strftime('%b %e') %></small></h3>
        <%= article.summary(125) %>
        <%= link_to "Read &raquo;", article, :class => "button secondary expand" %>
      </div>

      <% else %>
      <div class="row">
        <div class="large-12 columns">
          <%= link_to article.title, article %> <%= article.date.strftime('%b %e') %> <%= link_to "&raquo;", article, :class => "button secondary tiny" %>

        </div>
      </div>

      <% end %>

      <% end %>


      <% end %>
    </div>


  </div>
</div>

