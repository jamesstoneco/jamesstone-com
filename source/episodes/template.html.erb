<div class="row">
  <div class="medium-9 columns">
    <div class="flex-video widescreen">
      <iframe width="1280" height="720" src="https://www.youtube.com/embed/<%= episode.youtube_id %>" frameborder="0" allowfullscreen></iframe>
    </div>
  </div>
  <div class="medium-3 columns">
      <% data.episodes.each do | ep | %>
        <a href="/<%= ep.number %>" class="button tiny hollow expanded <%= "secondary" unless ep.number == episode.number %> text-left">  
          Ep. <%= ep.number %>:
          <%= ep.title %>
        </a>
      <% end %>
  </div>
</div>
